<%= link_to 'Stop Hiring Process', change_status_path(:type => 'stop', :id => submission.id) %><br />
<% if submission.position.time_type == 'Temporary' %>
  <%= submission.opening %> is for temporary employees, no paperwork will be generated.<br />
<% else %>
  <%= link_to 'Retrieve Hiring Process Paperwork', paperwork_path(:id => submission.id, :type => 'hiring') %><br />
<% end %>
<% if @current_user.administrator? %>
  <%= link_to 'Complete Hiring Process for Applicant', change_status_path(:type => 'hire', :id => submission.id), :confirm => t('hiring.references') %><br />
<% end %>
